<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnSkorBerbicara4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="skor berbicara4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSkormembaca4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="skor membaca4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSkormenulis4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="skor menulis4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSkorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/text_white"
        android:text="skor Total"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvSkor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>